{{>layout/header}}
<!-- space detail start -->
<div class="content-area pb-5 pt-3">
    <div class="container mt-5 content-body">
        <h3 class="pb-3">{{product.p_name}}</h3>
        <a href="/space/update/{{product.p_id}}" role="button" class="btn btn-info mb-4">게시글 수정</a>
        <button type="button" class="btn btn-danger mb-4" id="btn-space-delete">게시글 삭제</button>
        <input type="hidden" id="p_id" value="{{product.p_id}}">
        <div class="row">
            <div class="col-8">
                <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/img/recordroom.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/recordroom1.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/recordroom2.png" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="price-info">
                    <table class="table price-table">
                        <tbody>
                        <tr>
                            <td class="">
                                <p>
                                    <i class="fa fa-credit-card fa-2x pr-2" aria-hidden="true"></i>
                                </p>
                            </td>
                            <td><span class="price-span-first">주중</span><span class="price-span-second">{{product.p_weekdayPrice}}원/시간</span></td>
                            <td><span class="price-span-first">주말</span><span class="price-span-second">{{product.p_weekendPrice}}원/시간</span></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <form class="">
                    <ul class="nav flex-column reservation-nav p-3">
                        <li class="nav-item">
                            <p class="reservation-p">예약 날짜</p>
                            <div class=''>
                                <div class="form-group">
                                    <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                                        <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                        <input type="text" class="form-control datetimepicker-input" id="reserveDate" data-target="#datetimepicker1" value="" onKeyDown="return false">
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <p class="reservation-p">인원 수(최대 {{product.p_maxNum}}명)</p>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></div>
                                </div>
                                <input type="number" class="form-control" id="reserveNum" max="{{product.p_maxNum}}" min="1" value="1" onKeyDown="return false">
                            </div>
                        </li>
                        <li class="nav-item">
                            <p class="reservation-p">방 유형</p>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend select-room">
                                    <div class="input-group-text"><i class="fa fa-book" aria-hidden="true"></i></div>
                                </div>
                                <select class="form-control" id="optionSelectBox" >
                                    {{#option}}
                                        <option value="{{po_id}}">{{title}} ({{startTime}}:00-{{endTime}}:00)</option>
                                    {{/option}}
                                </select>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="row pl-3 mt-3">
                                <p class="reservation-p">예상 가격</p>
                                <button type="button" class="btn btn-info h-50 ml-2" id="previewPriceBtn">확인</button>
                            </div>
                            <div class="input-group mb-2">
                                <input type="text" class="form-control border border-secondary" id="previewPrice" value="" readonly>
                            </div>
                        </li>
                        <li class="nav-item text-center pt-3">
                            <button type="submit" class="btn btn-primary mt-2" id="checkReserveBtn">예약하기</button>
                        </li>
                    </ul>
                </form>
            </div>
        </div>

        <div class="row justify-content-center sticky-top">
