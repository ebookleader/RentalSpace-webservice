                        <option>녹음</option>
                        <option>댄스</option>
                        <option>뮤지컬</option>
                        <option>쿠킹</option>
                        <option>스터디</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="p_city">도시</label>
                    <select class="form-control" id="p_city">
